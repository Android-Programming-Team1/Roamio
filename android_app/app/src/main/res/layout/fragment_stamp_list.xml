<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.fragment.StampListFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:scaleType="fitXY"
        android:src="@drawable/bg_stamp_list" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="138dp"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/stampListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp">

            <!-- 목록 1 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="350dp"
                android:layout_height="130dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/stamp_list_rounded"
                android:elevation="4dp"
                android:padding="16dp">

                <!-- 스탬프 이미지 -->
                <ImageButton
                    android:id="@+id/stamp_image_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/stamp_01"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/dashed_line_1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="18dp"/>

                <!-- 세로 점선 -->
                <ImageView
                    android:id="@+id/dashed_line_1"
                    android:layout_width="1dp"
                    android:layout_height="86dp"
                    android:background="@drawable/stamp_dashline"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="118dp"/>

                <!-- 텍스트 영역 -->
                <LinearLayout
                    android:id="@+id/text_container_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/dashed_line_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:id="@+id/text_country_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="일본 JAPAN"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/text_date_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="March 8, 2024"
                        android:textSize="10sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/text_desc_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="부모님과 함께 한 시부야"
                        android:textSize="10sp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textColor="@color/black" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 목록 2 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="350dp"
                android:layout_height="130dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/stamp_list_rounded"
                android:elevation="4dp"
                android:padding="16dp">

                <!-- 스탬프 이미지 -->
                <ImageButton
                    android:id="@+id/stamp_image_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/stamp_02"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/dashed_line_2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="18dp"/>

                <!-- 세로 점선 -->
                <ImageView
                    android:id="@+id/dashed_line_2"
                    android:layout_width="1dp"
                    android:layout_height="86dp"
                    android:background="@drawable/stamp_dashline"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="118dp"/>

                <!-- 텍스트 영역 -->
                <LinearLayout
                    android:id="@+id/text_container_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/dashed_line_2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:id="@+id/text_country_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="프랑스 FRANCE"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/text_date_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="April 15, 2025"
                        android:textSize="10sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/text_desc_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="비 오는 날의 에펠탑"
                        android:textSize="10sp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textColor="@color/black" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 목록 3 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="350dp"
                android:layout_height="130dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/stamp_list_rounded"
                android:elevation="4dp"
                android:padding="16dp">

                <!-- 스탬프 이미지 -->
                <ImageButton
                    android:id="@+id/stamp_image_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/stamp_03"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/dashed_line_3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="18dp"/>

                <!-- 세로 점선 -->
                <ImageView
                    android:id="@+id/dashed_line_3"
                    android:layout_width="1dp"
                    android:layout_height="86dp"
                    android:background="@drawable/stamp_dashline"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="118dp"/>

                <!-- 텍스트 영역 -->
                <LinearLayout
                    android:id="@+id/text_container_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/dashed_line_3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:id="@+id/text_country_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="일본 JAPAN"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/text_date_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="April 26, 2025"
                        android:textSize="10sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/text_desc_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="눈물의 졸업 기념 여행"
                        android:textSize="10sp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textColor="@color/black" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 목록 4 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="350dp"
                android:layout_height="130dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/stamp_list_rounded"
                android:elevation="4dp"
                android:padding="16dp">

                <!-- 스탬프 이미지 -->
                <ImageButton
                    android:id="@+id/stamp_image_4"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/stamp_00"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/dashed_line_4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="18dp"/>

                <!-- 세로 점선 -->
                <ImageView
                    android:id="@+id/dashed_line_4"
                    android:layout_width="1dp"
                    android:layout_height="86dp"
                    android:background="@drawable/stamp_dashline"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="118dp"/>

                <!-- 텍스트 영역 -->
                <LinearLayout
                    android:id="@+id/text_container_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/dashed_line_4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:id="@+id/text_date_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="추가하기"
                        android:textSize="10sp"
                        android:textColor="@color/black" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="46dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/btn_back" />

</FrameLayout>